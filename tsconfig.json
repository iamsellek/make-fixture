{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "es2022"],
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"]
}
